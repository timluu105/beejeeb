- content_for :css do
  %link{:href => "/css/form.css", :rel => "stylesheet"}/

%section.signup_login_area
  .signup_login_area_main
    .container-fluid
      .row
        .col
          .looin_item
            .password_form_area
              %h2 Change your password
              = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
                = devise_error_messages!
                = f.hidden_field :reset_password_token
                .input.input_bejeeb
                  = f.password_field :password, id: 'input-password', class: 'input__field input__field_bejeeb'
                  %label.input__label.input__label_bejeeb{:for => "input-password"}
                    %span.input__label-content.input__label-content_bejeeb New password

                .input.input_bejeeb
                  = f.password_field :password_confirmation, id: 'input-password-confirmation', class: 'input__field input__field_bejeeb'
                  %label.input__label.input__label_bejeeb{:for => "input-password-confirmation"}
                    %span.input__label-content.input__label-content_bejeeb Password Confirmation

                %button{type: "submit"} Change my password
