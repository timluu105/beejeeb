%table.table.table-striped.data-table
  %thead
    %tr
      %th Order Number
      %th Client
      %th Creation date
      %th Total
      %th Status
      %th Actions
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.number
        %td= order.client_name
        %td= order.created_at
        %td= order.total_price
        %td= order.status
        %td
          - if order.status == 'reviewing'
            = link_to 'Review', admin_order_review_path(order)
          - else
            = link_to 'View', [:edit, :admin, order]
