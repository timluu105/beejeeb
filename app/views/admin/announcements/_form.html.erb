<%= semantic_form_for [:admin, @announcement] do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :url, hint: 'use full address with http.. or path with leading /' %>
    <%= f.input :status, as: :select, collection: Announcement::STATUSES, include_blank: false %>
  <% end %>
  <%= f.action :submit, button_html: { class: 'btn btn-primary' } %>
<% end %>
