    %script{:src => "/js/jquery.min.js"}
    %script{:src => "/js/bootstrap.min.js"}
    / Custom Javascript
    %script{:src => "/js/custom.js"}
    %script{:src => "/js/product-fetcher.js"}
    %script{:src => "/js/rails-ujs.js"}
