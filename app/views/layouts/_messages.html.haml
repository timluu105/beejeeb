- if !admin_pages? && current_announcement
  = render partial: 'layouts/message', |
    locals: {                          |
      msg: current_announcement.title, |
      url: current_announcement.url,   |
      klass: 'announcement',           |
      name: 'announcement'             |
    }                                  |

- if !admin_pages? && current_notification
  = render partial: 'layouts/message',   |
    locals: {                            |
      msg: current_notification.text,    |
      route: current_notification.route, |
      prms: current_notification.params, |
      klass: 'notification',             |
      name: 'notification'               |
    }                                    |

- flash.each do |name, msg|
  - if msg.is_a?(String)
    = render partial: 'layouts/message', locals: { msg: msg, name: name.to_s }
